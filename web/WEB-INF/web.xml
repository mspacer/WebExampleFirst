<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ServletFirst</servlet-name>
        <servlet-class>ua.msp.servlets.ServletFirst</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletSecond</servlet-name>
        <servlet-class>ua.msp.servlets.ServletSecond</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetCookieServlet</servlet-name>
        <servlet-class>ua.msp.servlets.GetCookieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SetCookieServlet</servlet-name>
        <servlet-class>ua.msp.servlets.SetCookieServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteCookieServlet</servlet-name>
        <servlet-class>ua.msp.servlets.DeleteCookieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletFirst</servlet-name>
        <url-pattern>/servletFirst</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletSecond</servlet-name>
        <url-pattern>/servletSecond</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetCookieServlet</servlet-name>
        <url-pattern>/getCookie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SetCookieServlet</servlet-name>
        <url-pattern>/setCookie</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteCookieServlet</servlet-name>
        <url-pattern>/deleteCookie</url-pattern>
    </servlet-mapping>

</web-app>